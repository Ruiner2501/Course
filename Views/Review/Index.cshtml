@model IEnumerable<Review>


    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
            <h2 class="text-primary">Review List</h2>
            </div>
            <div class="col-6">
            Create New Review
            </div>
        </div>
        <br/><br/>


@if(Model.Count()>0)
{
    <table class=" table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th>
                    Rating
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Title</td>
                          <td width="30%">@obj.Author</td>
                            <td width="20%">@obj.rating</td>

                    </tr>
                }

        </tbody>
    </table>
}
else
{
    <p>No review exists</p>
}
</div>
